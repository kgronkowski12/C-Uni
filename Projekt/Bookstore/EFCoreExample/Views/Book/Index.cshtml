@{
	ViewData["Title"] = "All Books";
}
@model IEnumerable<connectedBook>

<h1>Książki</h1>
<a asp-action="Create" class="btn btn-secondary">Dodaj</a>

<table class="table table-sm table-bordered">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Genre</th>
		<th>Autor</th>
		<th>Description</th>
		<th>Price</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	@foreach (connectedBook emp in Model)
	{
		<tr>
			<td>@emp.book.Id</td>
			<td>@emp.book.Name</td>
			<td>@emp.genre.Name</td>
			<td>@emp.autorName</td>
			<td>@emp.book.Description</td>
			<td>@emp.book.Price</td>
			<td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@emp.book.Id">
                    Zmień
                </a>
            </td>
			<td>
                <form asp-action="Delete" asp-route-id="@emp.book.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Usuń
                    </button>
                </form>
            </td>
		</tr>
	}
</table>