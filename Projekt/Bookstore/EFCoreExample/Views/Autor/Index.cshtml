@{
	ViewData["Title"] = "All Autor";
}
@model IEnumerable<Autor>

<h1>Autorzy</h1>
<a asp-action="Create" class="btn btn-secondary">Dodaj</a>

<table class="table table-sm table-bordered">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Surname</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	@foreach (Autor dept in Model)
	{
		<tr>
			<td>@dept.Id</td>
			<td>@dept.Name</td>
			<td>@dept.Surname</td>
			<td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@dept.Id">
                    Zmień
                </a>
            </td>
			<td>
                <form asp-action="Delete" asp-route-id="@dept.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Usuń
                    </button>
                </form>
            </td>
		</tr>
	}
</table>